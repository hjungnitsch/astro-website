{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/object.schema.json",
  "title": "Astro Object Metadata",
  "description": "Schema for deep-sky object detail pages.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "slug",
    "title",
    "type",
    "description"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 2,
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "slug": {
      "type": "string",
      "minLength": 2,
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "title": {
      "type": "string",
      "minLength": 2
    },
    "catalogs": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "minLength": 1
      }
    },
    "type": {
      "type": "string",
      "minLength": 2
    },
    "constellation": {
      "type": "string",
      "minLength": 2
    },
    "ra_deg": {
      "type": "number",
      "minimum": 0,
      "maximum": 360
    },
    "dec_deg": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "magnitude": {
      "type": "number"
    },
    "angular_size_arcmin": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "aliases": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
