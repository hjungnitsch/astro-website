{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/equipment.schema.json",
  "title": "Astro Equipment Metadata",
  "description": "Schema for equipment pages and image equipment references.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "slug",
    "kind",
    "brand",
    "model",
    "summary"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "slug": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "kind": {
      "type": "string",
      "enum": [
        "scope",
        "mount",
        "camera",
        "filter"
      ]
    },
    "brand": {
      "type": "string",
      "minLength": 1
    },
    "model": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "specs": {
      "type": "object",
      "description": "Flexible machine-readable specs by equipment type.",
      "additionalProperties": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "number"
          },
          {
            "type": "integer"
          },
          {
            "type": "boolean"
          }
        ]
      }
    }
  }
}
