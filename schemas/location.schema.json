{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/location.schema.json",
  "title": "Astro Location Metadata",
  "description": "Schema for reusable observation/imaging locations.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "slug",
    "name",
    "lat",
    "lon"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "slug": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 2
    },
    "lat": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "lon": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "bortle": {
      "type": "integer",
      "minimum": 1,
      "maximum": 9
    },
    "timezone": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    }
  }
}
