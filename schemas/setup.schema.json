{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/setup.schema.json",
  "title": "Astro Setup Metadata",
  "description": "Schema for reusable imaging setups referencing equipment records.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "scope_id",
    "mount_id",
    "camera_id"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 2
    },
    "scope_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "mount_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "camera_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "filter_id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    }
  }
}
