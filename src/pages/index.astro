---
import BaseLayout from "../layouts/BaseLayout.astro";
import ImageCard from "../components/ImageCard.astro";
import { getAllImages } from "../lib/content";

const images = await getAllImages();
const latest = images.slice(0, 5);
---

<BaseLayout title="AstroCaptures" description="Astrophotography gallery with deep-sky and solar-system captures.">
  <section class="hero">
    <h1>Astrophotography by Hendrik Jungnitsch</h1>
    <p class="muted">
      Astrophotography from my backyard in Bielefeld, Germany.<br/>
      Since 2020, Iâ€™ve been capturing whatever the night sky offers, from the Sun and planets to distant nebulae, galaxies, and globular clusters.
      <br/>
      This site is a growing collection of my deep-sky and solar system work, including capture details and dedicated object pages.
    </p>
  </section>

  <section>
    <h2 class="section-title">Latest Captures</h2>
    <div class="grid">
      {
        latest.map((image) => <ImageCard image={image} />)
      }
    </div>
  </section>
</BaseLayout>
